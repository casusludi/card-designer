    "@types/react-redux": "^7.1.7",
    "@types/redux": "^3.6.0",
    "@types/redux-logger": "^3.0.7",
    "@types/uuid": "^3.4.7",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "copy-webpack-plugin": "^5.1.1",
