{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "templates",
    "layouts",
    "sources"
  ],
  "properties": {
    "templates": {
      "$id": "#/properties/templates",
      "type": "object",
      "title": "The Templates Schema",
      "additionalProperties": {
        "type": "object",
        "required": [
          "hbs",
          "styles"
        ],
        "properties": {
          "hbs": {
            "type": "string"
          },
          "styles": {
            "type": "string"
          }
        }
      }
    }
  },
  "layouts": {
    "$id": "#/properties/layouts",
    "type": "object",
    "title": "The Layouts Schema",
    "additionalProperties": {
      "type": "object",
      "required": [
        "hbs",
        "styles"
      ],
      "properties": {
        "hbs": {
          "type": "string"
        },
        "styles": {
          "type": "string"
        }
      }
    }
  },
  "sources": {
    "$id": "#/properties/sources",
    "type": "object",
    "title": "The Sources Schema",
    "properties": {
      "gsheets": {
        "$id": "#/properties/sources/properties/gsheets",
        "type": "object",
        "title": "The Gsheets Schema",
        "required": [
          "sheetId"
        ],
        "properties": {
          "sheetId": {
            "$id": "#/properties/sources/properties/gsheets/properties/sheetId",
            "type": "string",
            "title": "The Sheetid Schema",
            "default": ""
          }
        }
      }
    }
  }
}