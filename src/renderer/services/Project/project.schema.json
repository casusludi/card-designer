{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "version",
    "cardTypes",
    "layouts",
    "sources"
  ],
  "additionalProperties": false,
  "properties": {
    "version": {
      "$id": "#/properties/version",
      "type": "string",
      "title": "The version Schema"
    },
    "cardTypes": {
      "$id": "#/properties/templates",
      "type": "object",
      "title": "The Templates Schema",
      "additionalProperties": {
        "type": "object",
        "required": [
          "template",
          "styles"
        ],
        "properties": {
          "template": {
            "type": "string"
          },
          "styles": {
            "type": "string"
          }
        }
      }
    },
    "layouts": {
      "$id": "#/properties/layouts",
      "type": "object",
      "title": "The Layouts Schema",
      "additionalProperties": {
        "type": "object",
        "required": [
          "template",
          "styles"
        ],
        "properties": {
          "template": {
            "type": "string"
          },
          "styles": {
            "type": "string"
          }
        }
      }
    },
    "sources": {
      "$id": "#/properties/sources",
      "type": "object",
      "title": "The Sources Schema",
      "additionalProperties": false,
      "properties": {
        "gsheets": {
          "$id": "#/properties/sources/properties/gsheets",
          "type": "object",
          "title": "The Gsheets Schema",
          "required": [
            "sheetId"
          ],
          "properties": {
            "sheetId": {
              "$id": "#/properties/sources/properties/gsheets/properties/sheetId",
              "type": [ "string", "null" ],
              "title": "The Sheetid Schema",
              "default": ""
            }
          }
        },
        "json": {
          "$id": "#/properties/sources/properties/json",
          "type": "object",
          "title": "The Json Schema",
          "required": [
            "path"
          ],
          "properties": {
            "path": {
              "$id": "#/properties/sources/properties/gsheets/properties/path",
              "type": [ "string", "null" ],
              "title": "The Path Schema",
              "default": ""
            }
          }
        },
        "mockup": {
          "$id": "#/properties/sources/properties/mockup",
          "type": "array",
          "title": "The Mockup Schema",
          "items": {
            "type": "object",
            "required": [
              "id",
              "cards"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "cards": {
                "type": "array",
                "items": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  }
}